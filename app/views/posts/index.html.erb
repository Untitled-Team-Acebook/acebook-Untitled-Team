<% @posts.each do |post| %>
  <p><%= post.message %>
  <i>by <%= link_to post.user == nil ? "anonymous" : post.user.name %></i>
  <br>
  <%= link_to edit_post_path(id: post.id) do %>Edit Post<% end %>
  <%= link_to "Delete", post, method: :delete %>
</p>

<% end %>

