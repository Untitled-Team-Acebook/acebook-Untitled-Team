<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <%if user != current_user%>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <% preadd = user.friendships.find { |friendship| friendship.user_id == current_user.id || friendship.friend_id == current_user.id} %>
        <%unless preadd %>
          <td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></td>

        <% end %>

      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
